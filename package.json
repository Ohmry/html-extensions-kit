{
  "name": "html-extensions-kit",
  "version": "0.1.0",
  "description": "A library that provides extended HTML elements for web development.",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:vite dev:namespace",
    "dev:vite": "vite",
    "dev:namespace": "chokidar 'src/**/*.ts' -c 'wca analyze src --format vscode --outDir .vscode && mv .vscode/ext-text-field.json .vscode/html-extension-elements.json'",
    "build:docs": "ts-node src/lib/document-index-generator.ts",
    "build": "tsc && pnpm run build:docs && pnpm run lint && vite build",
    "lint": "prettier . --write && eslint . --fix",
    "format": "prettier . --write",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Ohmry <o.ohmry@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ohmry/html-extensions-kit.git"
  },
  "homepage": "https://github.com/Ohmry/html-extensions-kit#readme",
  "bugs": {
    "url": "https://github.com/Ohmry/html-extensions-kit/issues"
  },
  "packageManager": "pnpm@10.20.0",
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.9.2",
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "jsdom": "^27.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "terser": "^5.44.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.12",
    "vite-plugin-dts": "^4.5.4",
    "web-component-analyzer": "^2.0.0"
  },
  "dependencies": {
    "bootstrap-icons": "^1.13.1",
    "ts-node": "^10.9.2"
  }
}
