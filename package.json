{
  "name": "html-extensions-kit",
  "version": "0.3.4",
  "description": "A library that provides extension elements to make web development easier.",
  "type": "module",
  "main": "dist/html-extensions-kit.min.js",
  "module": "dist/html-extensions-kit.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "dev": "npm-run-all --parallel dev:vite dev:namespace",
    "dev:vite": "vite",
    "dev:namespace": "chokidar 'src/**/*.ts' -c 'wca analyze src --format vscode --outDir .vscode && mv .vscode/ext-text-field.json .vscode/html-extension-elements.json'",
    "tsc:core": "tsc -p tsconfig.core.json",
    "lint:core": "prettier ./src/core --write && eslint ./src/core --fix",
    "test:core": "vitest run --config vitest.config.core.ts",
    "build:core": "pnpm run tsc:core && pnpm run lint:core && pnpm run test:core && vite build --config vite.config.core.ts",
    "build:docs": "ts-node src/tools/document-index-generator.ts",
    "build": "pnpm run build:docs && pnpm run format && pnpm run build:core",
    "lint": "prettier . --write && eslint . --fix",
    "format": "prettier . --write",
    "test": "vitest run"
  },
  "files": [
    "dist/*",
    "!dist/core"
  ],
  "keywords": [],
  "author": "Ohmry <o.ohmry@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ohmry/html-extensions-kit.git"
  },
  "homepage": "https://github.com/Ohmry/html-extensions-kit#readme",
  "bugs": {
    "url": "https://github.com/Ohmry/html-extensions-kit/issues"
  },
  "packageManager": "pnpm@10.20.0",
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@testing-library/dom": "^10.4.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.9.2",
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "jsdom": "^27.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "terser": "^5.44.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.12",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.7",
    "web-component-analyzer": "^2.0.0"
  },
  "dependencies": {
    "bootstrap-icons": "^1.13.1"
  }
}
